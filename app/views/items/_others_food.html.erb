<div class="section">
    <div class="container">
        <div class="title mb-5">
        Les autres plats de ce chef
        </div>
        <div class="columns is-centered others-food-list">
            <%item.foodtruck.items.sample(3).each do |food| %>
                <div class="card column other-food-card">
                    <div class="card-image">
                        <figure class="image  is-4by3">
                            <%= image_tag(food.picture, alt: "fodd-img", style: "min-height: 10rem; min-width: 15rem; object-fit: cover")%>
                        </figure>
                    </div>       
                    <div class="card-content">                    
                        <p class="title is-size-4"><%= food.name %></p>
                        <p class="subtitle is-size-6"><%= food.price %>â‚¬</p>
                        <%= link_to customer_cart_cart_contents_path(item: item.id), class: "button cart-button is-pink", style:"border: transparent", method:'post', remote: true do %>
                            <span class="icon is-small">
                            <%= image_tag("bag.png")%>
                            </span>
                            <span>Ajouter au panier</span>
                        <% end %>
                    </div>              
                </div>
            <%end%>
        </div>
    </div>
</div>