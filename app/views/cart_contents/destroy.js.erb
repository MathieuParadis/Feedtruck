document.getElementById('<%= @cart_content.created_at %>').remove();
document.getElementById("cart-count").innerText = "<%= current_customer.cart.items.count %>";
document.getElementById("cart-total-price").innerText = "<%= sprintf('%.2f',  current_customer.cart.total_price) %>â‚¬";


if (<%= current_customer.cart.items.count %> <= 1 ) {
  document.getElementById("cart-nb-article").innerText = "<%= current_customer.cart.items.count %> article";
}
else {
  document.getElementById("cart-nb-article").innerText = "<%= current_customer.cart.items.count %> articles";
}

navbar = document.querySelector(".navbar");
section = document.querySelector(".section");
body = document.body;

flash = document.createElement("div")
flash.setAttribute("id", "flash")
flash.innerHTML = "<%= j render partial: "layouts/flash", locals: { flash: flash } %>"


if (body.childNodes[3] == section) {
  body.insertBefore(flash, navbar.nextSibling);
} else {
  document.getElementById('flash').remove();
  body.insertBefore(flash, navbar.nextSibling);
}