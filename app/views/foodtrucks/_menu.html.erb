<div class="section">
  <div class=" container box is-flex is-flex-direction-column is-align-items-center item-list"> 
    <p class="title has-text-centered is-size-3-mobile py-5">Le menu chez <%= foodtruck.name %></p>
    <% foodtruck.items.each do |item| %>
      <div class="box p-5 column is-7 is-10-mobile is-flex is-align-items-center is-justify-content-space-between index-items pink-shadow">
        <div class="box-content index-items-content">             
          <p class="title is-5 mb-2 is-text-primary"><%= item.name %></p>
          <p class="subtitle is-5 mt-2"><%= sprintf "%.2f", item.price %>â‚¬</p>
          <p class="description mb-5"><%= item.description.truncate(20) %></p>
          <div class="is-flex my-2 is-flex-wrap-wrap is-align-items-center">                         
            <%if !current_myfoodtruck_foodtruck %>
              <%= link_to foodtruck_item_path(foodtruck.id, item.id), class: "button show-button is-rounded is-primary mr-2" do %>
                <span>Voir plus</span>
              <% end %>
              <%= link_to cart_cart_contents_path(item: item.id, quantity: '1'), class: "button is-rounded is-primary mr-2", method:'post', remote: true do %>
                <span class="icon is-small"><%= image_tag("bag.png") %></span>
              <% end %>
            <%end%>
          </div>
        </div>
        <div class="box-content index-items-content">
          <% if item.picture.attached? %>
            <%= image_tag item.picture, alt: "Thumbnail [100%x225]", class: "menu-item-img" %>
          <% else %>
            <img src="https://images.pexels.com/photos/566566/pexels-photo-566566.jpeg?cs=srgb&dl=pexels-foodie-factor-566566.jpg&fm=jpg" alt="food-img" class="menu-item-img">
          <% end %>
        </div>                        
      </div>
    <%end%>                                             
  </div>
</div>





