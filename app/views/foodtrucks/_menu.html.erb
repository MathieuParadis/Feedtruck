
<div class="section">
    <div class=" container box is-flex is-flex-direction-column is-align-items-center item-list"> 
        <p class="title py-5">
            Le menu chez <%= foodtruck.name %>
        </p>
        <% foodtruck.items.each do |item| %>          
        <div class="box column is-7 is-flex is-align-items-center is-justify-content-space-between">
            <div class="box-content">             
                    <p class="item-title title">
                        <%= item.name %>
                    </p>
                    <p class="item-price subtitle">
                        <%= item.price %><span> â‚¬</span>
                    </p>
                    <p class="description mb-5">
                        Lorem ipsum dolor sit amet consectetur adipisicing...
                    </p>
                    <div class="box-footer">
                        <button class="button cart-button">
                            <span class="icon is-small">
                            <%= image_tag("bag.png")%>
                            </span>
                            <span>Ajouter au panier</span>
                            <%= button_to customer_cart_cart_contents_path(item.id), method: :post do %>
                                <span class="fas fa-cart-arrow-down">button</span>
                            <% end %>
                        </button>
                    </div>
            </div>
            <figure class="box-img image">
                <img src="https://images.pexels.com/photos/566566/pexels-photo-566566.jpeg?cs=srgb&dl=pexels-foodie-factor-566566.jpg&fm=jpg" alt="food-img" class="menu-item-img">
            </figure>
            <figure class="box-img image">
                <% if item.picture.attached? %>
                    <%= image_tag item.picture, alt: "Thumbnail [100%x225]" %>
                <%end%>
            </figure>                                     
        </div>
        <%end%>                                             
    </div>
</div>
    
