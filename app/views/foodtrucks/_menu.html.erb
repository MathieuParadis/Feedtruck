<div class="section">
    <div class=" container box is-flex is-flex-direction-column is-align-items-center item-list"> 
        <%if !current_myfoodtruck_foodtruck %>
            <p class="title has-text-centered is-size-3-mobile py-5">
                Le menu chez <%= foodtruck.name %>
            </p>
        <%else%>
            <div class="menu-foodtruck has-text-centered mb-5 is-flex is-flex-wrap-wrap is-justify-content-space-between is-align-items-center">
                <p class="title mb-2 mr-2 is-size-3-mobile is-size-2 ">
                    Mes plats
                </p>
                <%=link_to new_myfoodtruck_foodtruck_item_path(foodtruck.id), class:"button add-food-btn is-link", style:"border: transparent;" do%>
                    <span>Rajouter un plat</span>
                <%end%>
            </div>
        <%end%>
        
        <% foodtruck.items.each do |item| %>
            <div class="box column is-7 is-10-mobile is-flex is-align-items-center is-justify-content-space-between index-items pink-shadow">
                <div class="box-content index-items-content">             
                    <p class="title is-5 mb-2 web-color tenor">
                        <%= item.name %>
                    </p>
                    <p class="subtitle is-5 mt-2 manrope">
                        <%= sprintf "%.2f", item.price %> €                 
                    </p>
                    <p class="description mb-5 manrope">
                        <%=item.description.truncate(20)%>
                    </p>
                    <div class="is-flex my-2 is-flex-wrap-wrap is-align-items-center">                         
                        <%if !current_myfoodtruck_foodtruck %>
                            <%= link_to foodtruck_item_path(foodtruck.id, item.id), class: "button show-button is-rounded is-primary mr-2" do %>
                                <span>Voir plus</span>
                            <% end %>
                            <%= link_to customer_cart_cart_contents_path(item: item.id, quantity: '1'), class: "button cart-button is-primary mr-2", style:"border: transparent", method:'post', remote: true do %>
                                <span class="icon is-small">
                                    <%= image_tag("bag.png")%>
                                </span>
                            <% end %>
                        <%else%>
                            <%= link_to edit_myfoodtruck_foodtruck_item_path(item.id), class: "button edit-food-button" do %>
                                <span>Modifier ce plat là</span>
                            <% end %>
                        <%end%>
                    </div>
                </div>
                <div class="box-content index-items-content">
                    <% if item.picture.attached? %>
                        <%= image_tag item.picture, alt: "Thumbnail [100%x225]", class: "menu-item-img" %>
                    <%else%>
                        <img src="https://images.pexels.com/photos/566566/pexels-photo-566566.jpeg?cs=srgb&dl=pexels-foodie-factor-566566.jpg&fm=jpg" alt="food-img" class="menu-item-img">
                    <%end%>
                </div>                        
            </div>
        <%end%>                                             
    </div>
</div>





